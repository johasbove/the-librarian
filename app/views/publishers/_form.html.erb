<div class="well">
  <%= form_for(@publisher) do |f| %>
    <% if @publisher.errors.any? %>
      <div id="error_explanation" class= "alert alert-danger">
        <h2><%= pluralize(@publisher.errors.count, "error") %> prohibited this publisher from being saved:</h2>

        <ul>
        <% @publisher.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :origin_country %><br>
      <%= f.text_field :origin_country, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :founded_year %><br>
      <%= f.number_field :founded_year, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :founder %><br>
      <%= f.text_field :founder, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>
</div>