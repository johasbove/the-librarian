<div class="well">
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation" class= "alert alert-danger">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :author_ids %><br>
      <%= f.collection_select(:author_ids, Author.all, :id, :name, {}, {multiple: true}) %>
    </div>
    <div class="field form-group">
      <%= f.label :publisher_id %><br>
      <%= f.collection_select(:publisher_id, Publisher.all, :id, :name) %>
    </div>
    <div class="field form-group">
      <%= f.label :original_title %><br>
      <%= f.text_field :original_title, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :translation %><br>
      <%= f.text_field :translation, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :edition %><br>
      <%= f.number_field :edition, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :edition_date %><br>
      <%= f.date_select :edition_date, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :edition_place %><br>
      <%= f.text_field :edition_place , class: "form-control"%>
    </div>
    <div class="field form-group">
      <%= f.label :publication_year %><br>
      <%= f.number_field :publication_year, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :isbn %><br>
      <%= f.text_field :isbn, class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :cover %><br>
      <%= f.file_field :cover%>
      <p class="help-block">Ingrese una foto de portada del libro.</p>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>
</div>